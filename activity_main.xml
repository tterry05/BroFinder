<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/profileButton"
        android:layout_width="40dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="18dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/icon_account_circle" />

    <ImageView
        android:id="@+id/notificationButton"
        android:layout_width="40dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="80dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/baseline_notifications_24" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="411dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="150dp"
        android:visibility="visible"
        app:srcCompat="@drawable/text_rectangle" />

    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="173dp"
        android:text="sample location, sample lifts, sample bio etc..."
        android:textColor="#DDDADA"
        android:textSize="24sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="269dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="371dp"
        android:text="Sample Name"
        android:textColor="#DDDADA"
        android:textSize="36sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="258dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-12dp"
        android:visibility="visible"
        app:srcCompat="@drawable/bro_finder_logo" />

    <Button
        android:id="@+id/yesButton"
        android:layout_width="146dp"
        android:layout_height="144dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#76FAAA"
        android:padding="18dp"
        android:text="@string/yes"
        android:textColor="#76FAAA"
        android:textSize="1sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="146dp"
        android:layout_height="144dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#D1606A"
        android:padding="18dp"
        android:text="@string/no"
        android:textColor="#D1606A"
        android:textSize="20sp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/baseline_check_24" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/baseline_x_24"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="189dp"
        android:layout_height="454dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="111dp"
        android:layout_marginEnd="111dp"
        app:srcCompat="@drawable/sample_phone_image" />

</RelativeLayout>
